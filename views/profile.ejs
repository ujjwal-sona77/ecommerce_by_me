<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <% if(success.length> 0) { %>
        <div class="bg-green-500 text-white p-2">
            <%= success %>
        </div>
        <% } %>
            <div class="min-h-screen bg-gray-100">
                <nav class="bg-white shadow-sm">
                    <div class="container mx-auto px-4 py-4">
                        <a href="/shop" class="inline-flex items-center text-blue-600 hover:text-blue-800">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Back to Shop
                        </a>
                    </div>
                </nav>
                <div class="container mx-auto px-4 py-8">
                    <!-- User Details Section -->
                    <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
                        <div class="flex items-center mb-6">
                            <div class="w-24 h-24 rounded-full overflow-hidden mr-6">
                                <% if(user.picture) { %>
                                    <img src="data:image/jpeg;base64,<%= user.picture.toString('base64') %>"
                                        alt="Profile Photo" class="w-full h-full object-cover">
                                    <% } else { %> 
                                        <div class="w-full h-full bg-gray-300 flex items-center justify-center">
                                            <span class="text-3xl text-gray-600"><%= user.fullname[0].toUpperCase() %></span>
                                        </div>
                                    <% } %>
                            </div>
                            <h2 class="text-xl sm:text-2xl font-bold">User Profile</h2>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div>
                                <p class="text-gray-600">Name:</p>
                                <p class="font-medium text-semibold">
                                    <%= user.fullname %>
                                </p>
                            </div>
                            <div>
                                <p class="text-gray-600">Email:</p>
                                <p class="font-medium break-all">
                                    <%= user.email %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Profile Button -->
                    <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
                        <div class="flex justify-end">
                            <a href="/users/edit-profile"
                                class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                                Edit Profile
                            </a>
                        </div>
                    </div>

                    <!-- Cart Section -->
                    <div class="bg-white rounded-lg shadow-md p-4 sm:p-6 mb-6">
                        <h2 class="text-xl sm:text-2xl font-bold mb-4">Shopping Cart</h2>
                        <% if(user.cart && user.cart.length> 0) { %>
                            <div class="space-y-4">
                                <% user.cart.forEach(item=> { %>
                                    <div
                                        class="flex flex-col sm:flex-row sm:items-center justify-between border-b pb-4">
                                        <div class="flex items-center mb-2 sm:mb-0">
                                            <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
                                                alt="<%= item.name %>" class="w-12 h-12 sm:w-16 sm:h-16 object-cover
                                                rounded">
                                            <div class="ml-4">
                                                <h3 class="font-medium text-sm sm:text-base">
                                                    <%= item.name %>
                                                </h3>
                                                <p class="text-gray-600 text-sm sm:text-base">₹<%= item.price %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="flex items-center">
                                            <span class="text-sm sm:text-base mx-2">Quantity: <%= item.quantity %>
                                            </span>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } else { %>
                                <p class="text-gray-600">Your cart is empty</p>
                                <% } %>
                    </div>

                    <!-- Orders Section -->
                    <div class="bg-white rounded-lg shadow-md p-4 sm:p-6">
                        <h2 class="text-xl sm:text-2xl font-bold mb-4">Order History</h2>
                        <% if(user.orders && user.orders.length> 0) { %>
                            <div class="space-y-4">
                                <% user.orders.forEach(order=> { %>
                                    <div class="border rounded-lg p-3 sm:p-4">
                                        <div
                                            class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-2">
                                            <h3 class="font-medium text-sm sm:text-base mb-1 sm:mb-0">Order #<%=
                                                    order._id %>
                                            </h3>
                                            <span class="text-gray-600 text-sm sm:text-base">
                                                <%= new Date(order.date).toLocaleDateString() %>
                                            </span>
                                        </div>
                                        <div class="space-y-3">
                                            <% order.items.forEach(item=> { %>
                                                <div
                                                    class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
                                                    <div class="flex items-center mb-2 sm:mb-0">
                                                        <img src="<%= item.image %>" alt="<%= item.name %>"
                                                            class="w-10 h-10 sm:w-12 sm:h-12 object-cover rounded">
                                                        <div class="ml-3 sm:ml-4">
                                                            <p class="font-medium text-sm sm:text-base">
                                                                <%= item.name %>
                                                            </p>
                                                            <p class="text-gray-600 text-sm">Quantity: <%= item.quantity
                                                                    %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <p class="font-medium text-sm sm:text-base">₹<%= item.price *
                                                            item.quantity %>
                                                    </p>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <div class="mt-3 sm:mt-4 pt-3 sm:pt-4 border-t">
                                            <div class="flex justify-between items-center">
                                                <span class="font-medium text-sm sm:text-base">Total Amount:</span>
                                                <span class="font-medium text-sm sm:text-base">₹<%= order.totalAmount %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } else { %>
                                <p class="text-gray-600">No orders found</p>
                                <% } %>
                    </div>
                </div>
            </div>
</body>

</html>
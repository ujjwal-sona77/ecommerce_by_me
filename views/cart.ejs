<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 dark:bg-gray-900">
    <nav class="bg-white border-gray-200 dark:bg-gray-900 dark:border-gray-700">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="/shop" class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="https://flowbite.com/docs/images/logo.svg" class="h-6 sm:h-8" alt="Flowbite Logo" />
                <span class="self-center text-xl sm:text-2xl font-semibold whitespace-nowrap dark:text-white">E-COMMERCE</span>
            </a>
            <a href="/shop" class="text-gray-500 hover:text-gray-700 text-sm sm:text-base">
                Continue Shopping
            </a>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-4 sm:py-8">
        <h1 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-8 text-gray-900 dark:text-white">Shopping Cart</h1>

        <div class="flex flex-col lg:flex-row gap-4 sm:gap-8">
            <!-- Cart Items -->
            <div class="w-full lg:w-2/3">
                <% if(user.cart && user.cart.length > 0) { %>
                    <div class="space-y-4">
                        <% var subtotal = 0 %>
                        <% user.cart.forEach(item => { %>
                            <% const discountedPrice = item.discount ? item.price - (item.price * item.discount / 100) : item.price %>
                            <% subtotal += discountedPrice * (item.quantity || 1) %>
                            <div class="flex flex-col sm:flex-row sm:items-center justify-between border-b pb-4 gap-4">
                                <div class="flex items-center space-x-4">
                                    <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" 
                                         alt="<%= item.name %>" 
                                         class="w-20 h-20 sm:w-24 sm:h-24 object-cover rounded">
                                    <div>
                                        <h3 class="font-medium text-sm sm:text-base text-gray-900 dark:text-white"><%= item.name %></h3>
                                        <% if(item.discount) { %>
                                            <p class="text-green-600 text-sm sm:text-base">₹<%= discountedPrice.toFixed(2) %> 
                                                <span class="text-xs sm:text-sm">(<%= item.discount %>% off)</span>
                                            </p>
                                            <p class="text-gray-600 line-through text-xs sm:text-sm">₹<%= item.price %></p>
                                        <% } else { %>
                                            <p class="text-gray-600 text-sm sm:text-base">₹<%= item.price %></p>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="flex items-center justify-between sm:justify-end space-x-4">
                                    <div class="flex items-center border rounded">
                                        <form action="/cart/decrease/<%= item._id %>" method="post" class="inline">
                                            <button type="submit" class="px-2 sm:px-3 py-1 hover:bg-gray-100">-</button>
                                        </form>
                                        <span class="px-2 sm:px-3 py-1 border-x text-sm sm:text-base"><%= item.quantity || 1 %></span>
                                        <form action="/cart/increase/<%= item._id %>" method="post" class="inline">
                                            <button type="submit" class="px-2 sm:px-3 py-1 hover:bg-gray-100">+</button>
                                        </form>
                                    </div>
                                    <form action="/cart/remove/<%= item._id %>" method="post" class="inline">
                                        <button type="submit" class="text-red-500 hover:text-red-700 text-sm sm:text-base">
                                            Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-6 sm:py-8">
                        <p class="text-gray-500 mb-4 text-sm sm:text-base">Your cart is empty</p>
                        <a href="/shop" class="text-blue-500 hover:text-blue-700 text-sm sm:text-base">Start Shopping</a>
                    </div>
                <% } %>
            </div>

            <!-- Order Summary -->
            <div class="w-full lg:w-1/3 mt-4 lg:mt-0">
                <div class="bg-white dark:bg-gray-800 rounded-lg p-4 sm:p-6 shadow">
                    <h2 class="text-lg sm:text-xl font-semibold mb-4 text-gray-900 dark:text-white">Order Summary</h2>
                    <div class="space-y-3 mb-4 text-sm sm:text-base">
                        <div class="flex justify-between text-gray-700 dark:text-gray-300">
                            <span>Subtotal</span>
                            <span>₹<%= subtotal ? subtotal.toFixed(2) : '0.00' %></span>
                        </div>
                        <div class="flex justify-between text-gray-700 dark:text-gray-300">
                            <span>Shipping</span>
                            <span>₹50.00</span>
                        </div>
                        <div class="border-t pt-3 font-semibold text-gray-900 dark:text-white">
                            <div class="flex justify-between">
                                <span>Total</span>
                                <span>₹<%= subtotal ? (subtotal + 50).toFixed(2) : '50.00' %></span>
                            </div>
                        </div>
                    </div>
                    <form action="/cart/checkout" method="post">
                        <button type="submit" class="w-full bg-blue-600 text-white py-2 sm:py-3 text-sm sm:text-base rounded-lg hover:bg-blue-700 transition duration-200">
                            Proceed to Checkout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
